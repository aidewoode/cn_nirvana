
<% count = post.comments.count %>
<% if count != 0%>
  <% if (count > 9)%>
    <% reply_id = "double_number"%>
  <% else %>
    <% reply_id = "one_number"%>
  <% end %>
  <div class="reply">
    <a href="#" id="<%= reply_id %>"><%= count %></a>
  </div>
<% end %>
  <div class="avatar">
    <img src="<%= post.user.avatar_url %>" alt="avatar" />
  </div>
  <div class="content">
    <div class="title">
      <a href="/topics/<%= post.id %>"><%= h(post.title) %></a>
    </div>
    <div class="info">
      <a href="/tags/<%= post.tag %>"><%= h(post.tag) %></a>
      <span> . </span>
      <% if (count == 0) %>
        <span>由</span>
        <a href="/account/<%= post.user.name %>"><%= h(post.user.name) %></a>
        <span>发表</span>
        <span>.</span>
        <span class="time"><%= time_ago(post.created_at)%></span>
      <% else %>
        <span>最后由</span>
        <% comment = post.comments.last%>
        <% user_name = comment.user.name %>
        <a href="/account/<%= user_name %>"><%= h(user_name) %></a>
        <span>回复</span>
        <span>.</span>
        <span class="time"><%= time_ago(comment.created_at)%></span>
      <% end %>
    </div>
  </div>
