<div class="all_topics">
  <% @posts.each do |post| %>
    <div class="topic">
      <div class="avatar">
        <img src="/picture/logo.png" alt="avatar" />
      </div>
      <div class="content">
        <div class="replies">
          <a href="#"><%= post.comments.count %></a>
        </div>
        <div class="infos">
          <div class="title">
            <p><a href="/topics/<%= post.id %>"><%= post.title %></a></p>
          </div>
          <div class="info">
            <p><a href="/account/<%= post.user.name %>"><%= post.user.name %></a></p>
            <p><%= pretty_date(post.created_at) %></p>
          </div>
        </div>
        <div class="empty">
          
        </div>
      </div>
      <div class="empty">
        
      </div>
    </div>
  <% end %>
  
</div>
