<div class="new_edit_post">
  <h1>Edit Post</h1>
  <form action="/posts/<%= @post.id %>" method="post">
    <input type="hidden" name="_method" value="put" />
  
    <label for="post_title">Title:</label><br/> 
    <input id="post_title" name="post[title]" type="text" value="<%= @post.title %>" />
    <br/>

    <label for="post_tag">Tag:</label><br/>
    <input id="post_tag" name="post[tag]" type="text" value="<%= @post.tag%>" />
    <br/>

    <label for="post_body">Body:</label><br/>
    <textarea id="post_body" name="post[body]" row="5"><%= @post.body %></textarea>
    <br/>

    <input type="submit" value="Edit Post" />

</form>
</div>
<script type="text/javascript" src="/js/jquery.min.js"></script>
<script type="text/javascript" src="/js/module.js"></script>
<script type="text/javascript" src="/js/simditor.js"></script>
<script type="text/javascript" src="/js/simditor-markdown.js"></script>

<script>
var editor = new Simditor({
      textarea: $('#post_body'),
      markdown: true
    }
    );
</script>
