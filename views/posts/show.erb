<div class="single_post">
  <article class="single_post">
    <header>
      <h1><%= @post.title %></h1>
      <div class="info">
        <span class="post_time">
          <%= pretty_date(@post.created_at) %>
        </span>
	<a class="post_tag" href="/tags/<%= @post.tag %>"><%= @post.tag %></a>
      </div>
    </header>
    <div class="content">
      <p><%= @post.body %></p>
    </div>
  </article>
</div>
