<h1>New Post</h1>
<form action="/posts" method="post">
  <label for="post_title">Title:</lable><br/> 
  <input id="post_title" name="post[title]" type="text" value="<%= @post.title %>" />
  <br/>

  <label for="post_body">Body:</lable><br/>
  <textarea id="post_body" name="post[body]" row="5"><%= @post.body %></textarea>
  <br/>

  <input type="submit" value="Create Post" />

</form>
